<div class="container mt-5">
  <h5 class="d-inline mt-10 bg-light">管理者ログイン</h5>
  <div class="row">
    <div class="mx-auto col-lg-4 mt-4">
      <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
      <table>
        <tbody>
          <tr>
          <td><%= f.label "メールアドレス" %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "ml-3" %></td>
          </tr>
          <tr>
          <td><%= f.label "パスワード" %></td>
          <td><%= f.password_field :password, autocomplete: "current-password", class: "ml-3" %></td>
        </tbody>
      </table>
      <div class="mt-2 ml-10">
        <%= f.submit "ログイン", class: 'btn btn-primary ' %>
      </div>
    </div>
  </div>
<% end %>
</div>