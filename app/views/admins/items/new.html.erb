<div class="container mt-3">
<h5 class="d-inline mb-10 bg-light">商品新規登録</h5>
  <div class="row">
    <div class="col-lg-6 mx-auto">
    <%= form_with model: @item, url: admins_items_path, local:true do |f| %>
      <table class="table mt-3">
        <tbody>
          <tr>
            <th>商品画像</th>
            <td><%= f.attachment_field :image %></td>
          </tr>
          <tr>
            <th>商品名</th>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td><%= f.text_area :introduction %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td><%= f.collection_select(:genre_id, @genres, :id, :name, {prompt: "--選択してください--" }) %></td>
          </tr>
          <tr>
            <th>税抜価格</th>
            <td><%= f.text_field :price %></td>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <td><%= f.radio_button :is_active, true, checked: true %>販売中 <%= f.radio_button :is_active, false %>販売停止中</td>
          </tr>
         </tbody>
       </table>
     <%= f.submit '新規登録', class: "btn btn-danger"%>
    <% end %>
    </div>
  </div>
</div>
