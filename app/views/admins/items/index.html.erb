<div class="container mt-3">
<h5 class="d-inline mb-10 bg-light">商品一覧</h5>
<table class="table mt-3">
  <thead class="thead-light">
    <tr>
      <th scope="col">商品id</th>
      <th scope="col">商品名</th>
      <th scope="col">税抜価格</th>
      <th scope="col">ジャンル</th>
      <th scope="col">ステータス</th>
    </tr>
  </thead>
  <% @items.each do |item| %>
  <tbody>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to admins_item_path(item.id) do %>
          <%= item.name %>
          <% end %>
      </td>
      <td><%= number_to_currency(item.price) %></td>
      <td><%= item.genre.name %></td>
      <td><%= status(item.is_active) %></td>
    </tr>
  </tbody>
  <% end %>
</table>
<%= link_to '商品追加', new_admins_item_path, class: "btn btn-danger" %>
<span class="mx-auto"><%= paginate @items %></span>
</div>