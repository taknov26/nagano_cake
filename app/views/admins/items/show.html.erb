<div class="container mt-3">
<h5 class="d-inline mb-10 bg-light">商品詳細</h5>
  <div class="row">
    <div class="col-lg-3">
      <span><%= attachment_image_tag @item, :image, format:'jpeg', fallback: "m_e_others_500.jpg", size:"100x100" %></span>
    </div>
    <div class="col-lg-6">
      <table class="table mt-3">
        <tbody>
          <tr>
            <th>商品名</th>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <th>税込価格</br>(税抜価格)</th>
            <td><%= number_to_currency(@item.price) %> (<%= addTax(@item.price,1.1) %>)円</td>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <td><%= item_status(@item.is_active) %></td>
          </tr>
        </tbody>
      </table>
        <%= link_to "編集する", edit_admins_item_path, class: "btn btn-danger" %>
    </div>
  </div>
</div>