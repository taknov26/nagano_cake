<div class="container mt-3">
<h5 class="d-inline mb-10 bg-light">注文履歴一覧</h5>

  <table class="table mt-3">
    <thead class="thead-light">
      <tr>
        <th scope="col">購入日時</th>
        <th scope="col">購入者</th>
        <th scope="col">注文個数</th>
        <th scope="col">注文ステータス</th>
      </tr>
    </thead>
    <% @orders.each do |order| %>
    <tbody>
      <tr>
        <td><%= link_to admins_order_path(order.id) do %>
            <%= order.created_at %>
            <% end %>
        </td>
        <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
        <td><%= order.all.sum(:amount)%></td>
        <td><%= order.orders_status %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
  <%= paginate @orders %>
</div>