<h3>注文履歴一覧</h3>

<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <% @orders.each do |order| %>
  <tbody>
    <tr>
      <td><%= link_to admins_order_path(order.id) do %>
          <%= 1 order.created_at %>
          <% end %>
      </td>
      <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
      <!--<td><number_to_currency(item.price) %>orders_itemsの数量カラムの合計</td>-->
      <td><%= order.orders_status %></td>
    </tr>
  </tbody>
  <% end %>
</table>
<%= paginate @orders %>