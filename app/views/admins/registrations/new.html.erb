<div class="container mt-5">
  <h5 class="d-inline mt-10 bg-light">管理者新規登録</h5>
    <div class="row">
      <div class="mx-auto col-lg-5 mt-4">
        <%= form_with model: @admin, url: admin_registration_path, local: true  do |f| %>
        <%= render "admins/shared/error_messages", resource: resource %>
        <table>
          <tbody>
            <tr>
              <td><%= f.label "メールアドレス" %></td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </tr>
            <tr>
              <td><%= f.label "パスワード(6文字以上)" %></td>
              <td>
                <%= f.password_field :password, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <td><%= f.label "パスワード確認用" %></td>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            </tr>
          </tbody>
        </table>
          <%= f.submit "Sign up", class: 'btn btn-primary' %>
          <% end %>
      </div>
    </div>
</div>
