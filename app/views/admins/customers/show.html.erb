<div class="container mt-3">
<h5 class="d-inline mb-10 bg-light"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>

<table class="table mt-3">
  <tbody  class="thead-light">
    <tr>
      <th>会員ID</th>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <th scope="col">氏名</th>
      <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
    </tr>
    <tr>
      <th scope="col">フリガナ</th>
      <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <th scope="col">郵便番号</th>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <th scope="col">住所</th>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th scope="col">電話番号</th>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th scope="col">メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <th scope="col">会員ステータス</th>
      <td><%= customer_status(@customer.is_active) %></td>
    </tr>
  </tbody>
</table>
<div>
  <%= link_to "編集する", edit_admins_customer_path, class: 'btn btn-danger mt-2' %>
</div>
<div>
  <%= link_to "注文履歴一覧を見る",  admins_top_path(@customer), class: 'btn btn-danger mt-2'%>
</div>
</div>