<h3>会員一覧</h3>

<table>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <% @customers.each do |customer| %>
  <tbody>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to admins_customer_path(customer.id) do %>
          <%= customer.last_name %><%= customer.first_name %>
          <% end %>
      </td>
      <td><%= customer.email %></td>
      <td><%= customer.is_active %></td>
    </tr>
  </tbody>
  <% end %>
</table>

<%= paginate @customers %>