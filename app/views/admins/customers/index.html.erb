<div class="container mt-3">
<h5 class="d-inline mb-10 bg-light">会員一覧</h5>

<table class="table mt-3">
  <thead class="thead-light">
    <tr>
      <th scope="col">会員ID</th>
      <th scope="col">氏名</th>
      <th scope="col">メールアドレス</th>
      <th scope="col">ステータス</th>
    </tr>
  </thead>
  <% @customers.each do |customer| %>
  <tbody>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to admins_customer_path(customer.id) do %>
          <%= customer.last_name %><%= customer.first_name %>
          <% end %>
      </td>
      <td><%= customer.email %></td>
      <td><%= customer_status(customer.is_active) %></td>
    </tr>
  </tbody>
  <% end %>
</table>

<%= paginate @customers %>
</div>