<div class="container mt-3">
<h5 class="d-inline mb-10 bg-light">商品一覧(全<%= @items_count %>件)</h5>
  <div class="row mt-2">
    <% @items.each do |item| %>
    <div class="col-lg-3 mt-5">
      <div class="card w-100 mx-auto shadow-sm">
        <div class="card-img-top text-center"><%= link_to public_item_path(item.id) do %><%= attachment_image_tag item, :image, format:'jpeg', fallback: "m_e_others_500.jpg", size:"100x100" %><% end %></div>
        <div class="card-title mx-auto"><%= item.name %></div>
        <div class="text mx-auto">￥<%= number_to_currency(item.price) %></div>
      </div>
    </div>
    <% end %>
  </div>
  <div class ="row">
    <div class="col-lg-12 text-center">
      <%= paginate @items %>
      </div>
  </div>
</div>