<h3>配送先登録/一覧</h3>

<%= form_with model: @address, url:public_addresses_path, local:true do |f| %>
<table>
  <tbody>
    <tr>
      <td>郵便番号</td>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td>宛名</td>
      <td><%= f.text_field :name %></td>
      <td><%= f.submit "新規登録" %></td>
    </tr>
  </tbody>
</table>
<% end %>

<table>
  <thead>
    <tr>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    <th colspan ="1"></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する", edit_public_address_path(address.id) %>
          <%= link_to "削除する", public_address_path(address.id), method: :delete %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>