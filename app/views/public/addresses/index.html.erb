<div class="container mt-3">
<h5 class="d-inline mb-10 bg-light">配送先登録/一覧</h5>
  <div class="row">
  <%= form_with model: @address, url: public_addresses_path, local:true do |f| %>
    <table class="mt-3">
      <tbody>
        <tr>
          <td>郵便番号</td>
          <td>　<%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td>　<%= f.text_field :address %></td>
        </tr>
        <tr>
          <td>宛名</td>
          <td>　<%= f.text_field :name %></td>
          <td><%= f.submit "新規登録", class: "btn btn-outline-danger" %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
  </div>

  <div class="row">
    <div class="col-8">
      <table class="table mt-3">
        <thead class="thead-light">
          <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th colspan ="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td><%= link_to "編集する", edit_public_address_path(address.id), class: "btn btn-outline-danger" %></td>
            <td><%= link_to "削除する", public_address_path(address.id), method: :delete, class: "btn btn-danger" %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>