<h3>注文履歴一覧</h3>

<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
<% @orders.each do |order| %>
  <tbody>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td>〒<%= order.postal_code %></br>
          <%= order.address %></br>
          <%= order.orders_name %>
      </td>
      <td>
        <% order.orders_items.each do |orders_item| %>
        <%= orders_item.item.name %></br>
        <% end %>
      </td>
      <td><%= number_to_currency(order.billing_amount) %></td>
      <td><%= order.orders_status %></td>
      <td><%= link_to "表示する", public_order_path(order.id) %></td>
    </tr>
  </tbody>
<% end %>
</table>
