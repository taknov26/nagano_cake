<div class="container mt-3">
  <h5 class="d-inline mb-10 bg-light">注文情報入力</h5>
  <%= form_with model: @order, url: orders_confirm_public_orders_path(@order), method: :post, local:true do |f| %>
  <h6>支払方法</h6>
  <div class="row ml-2">
    <div class="col">
      <p><%= f.radio_button :payment, "クレジットカード", checked: true  %>クレジットカード<br>
         <%= f.radio_button :payment, "銀行振込" %>銀行振込
      </p>
    </div>
  </div>
  <h6>お届け先</h6>
  <div class="row ml-2">
    <div class="col">
      <%= f.radio_button :address_option, 0 , checked: true %>ご自身の住所
      <div>〒<%= @customer.postal_code %> <%= @customer.address %><br>
          <%= @customer.full_name %></div>

      <%= f.radio_button :address_option, 1 %>登録済み住所から選択<br>
      <%= f.collection_select :option, @addresses, :id, :full_address, prompt: "--選択してください--" %><br>


      <%= f.radio_button :address_option, 2 %>新規住所</br>
      <table>
        <tbody>
          <tr>
            <td>郵便番号(ハイフンなし)</td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <td>宛名</td>
            <td><%= f.text_field :orders_name %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 text-center">
      <%= f.submit '確認画面へ進む', class: "btn btn-outline-danger" %>
      <% end %>
    </div>
  </div>
</div>