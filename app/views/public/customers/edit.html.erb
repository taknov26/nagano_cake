<div class="container mt-3">
  <h5 class="d-inline mt-10 bg-light">新規会員編集</h5>
    <div class="row">
      <%= form_with model: @customer, url: public_customer_path(@customer), method: :patch, local:true do |f| %>
      <table class="mt-3">
        <tbody>
          <tr>
            <td>氏名</td>
            <td><%= f.text_field :last_name %> <%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= f.text_field :telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.text_field :email %></td>
          </tr>
        </tbody>
      </table>
      <div>
        <%= f.submit '編集内容を保存', class: "btn btn-outline-danger mt-3" %>
        <% end %>
        <%= link_to "退会する", public_customers_confirm_path, class: "btn btn-danger mt-3 mr-10" %>
      </div>
    </div>
</div>