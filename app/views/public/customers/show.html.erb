<div class="container mt-3">
  <h5 class="d-inline mb-10 bg-light">マイページ</h5>
    <table class="mt-3">
      <tr>
        <th>登録情報</th>
        <td><%= link_to "編集する", edit_public_customer_path(@customer), class: "btn btn-outline-danger ml-5" %></td>
      </tr>
    </table>
  <table class="table mt-3">
    <tbody class="thead-light">
      <tr>
        <th scope="col">氏名</th>
        <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
      </tr>
      <tr>
        <th scope="col">フリガナ</th>
        <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th scope="col">郵便番号</th>
        <td><%= @customer.postal_code %></td>
     </tr>
      <tr>
        <th scope="col">住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th scope="col">電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th scope="col">メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </tbody>
  </table>

  <table>
    <tbody>
      <tr>
        <th>配送先</th>
        <td><%= link_to "一覧を見る", public_addresses_path(@customer), class: "btn btn-outline-danger ml-5" %></td>
      </tr>
      <tr>
        <th>注文履歴</th>
        <td><%= link_to "一覧をみる", public_orders_path(@customer), class: "btn btn-outline-danger ml-5" %></td>
      </tr>
    </tbody>
  </table>
</div>